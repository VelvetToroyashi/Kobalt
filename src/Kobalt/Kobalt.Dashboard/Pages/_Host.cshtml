@page "/"
@using System.Security.Claims
@using Kobalt.Dashboard.Services
@namespace Kobalt.Dashboard.Pages
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    var userId = HttpContext.User.FindFirstValue(ClaimTypes.NameIdentifier);

    if (!string.IsNullOrEmpty(userId))
    {
        var tokenStorage = HttpContext.RequestServices.GetRequiredService<ITokenRepository>();
        var token = await DiscordOAuth2Token.FromHttpContext(HttpContext);
        tokenStorage.SetToken(ulong.Parse(userId), token);
    }
}
