@inherits LayoutComponentBase
<MudThemeProvider IsDarkMode="true" Theme="KobaltTheme"/>
<MudDialogProvider/>
<MudSnackbarProvider/>

<MudLayout>
    <NavMenu/>

    <MudMainContent>
        @Body
    </MudMainContent>
</MudLayout>

@code {
    MudTheme KobaltTheme = new MudTheme()
    {
        Typography = new Typography()
        {
            Default = new Default()
            {
                FontFamily = new[] { "Inter", "Roboto", "Poppins", "Helvetica Neue", "Arial", "sans-serif" }
            }
        }
    };
}
